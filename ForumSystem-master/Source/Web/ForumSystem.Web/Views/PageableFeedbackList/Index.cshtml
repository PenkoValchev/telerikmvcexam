@model IEnumerable<ForumSystem.Data.Models.FeedBack>
 
<link href="~/Content/PagedList.css" rel="stylesheet" />
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
 
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Author.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
 
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
         
       <!--     item.Author.Email  Tова тук е модел view! :)-->
          
            @Html.DisplayFor(modelItem => item.Author.Email)
           

        </td>
        <td>
            <!--    item.Title Tова тук е модел view! :) -->
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            <!--    item.Content Tова тук е модел view! :) и е енкоднато да се изпозлва html !-->
           
            @Html.Raw(System.Web.HttpUtility.HtmlDecode(@Html.DisplayFor(modelItem => item.Content).ToHtmlString()))
           
        </td>
  
        <!--    i taka natatuk -->
        <td>
            @Html.DisplayFor(modelItem => item.CreatedOn)
        </td>
        
    </tr>
}

</table>
 